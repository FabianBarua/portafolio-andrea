---
import PortfolioCard from '../components/PortfolioCard.astro';
import Layout from '../layouts/Layout.astro';

const skills = [
	'Photoshop',
	'Illustrator',
	'Corel Draw',
	'Cap Cut',
	'Premiere',
	'canva'
];

const portfolio = [
	{
		title: 'Proyecto 1',
		img: '/img/work1.jpg',
		link: 'https://www.instagram.com/p/CmwLO-UvxsP/'
	},
	{
		title: 'Proyecto 2',
		img: '/img/work2.jpg',
		link: 'https://www.instagram.com/p/CkOIc0pA1Ez/'
	},
	{
		title: 'Proyecto 3',
		img: '/img/work3.jpg',
		link: 'https://www.instagram.com/p/ChhivsBNNwv/'
	},
	{
		title: 'Proyecto 4',
		img: '/img/work4.jpg',
		link: 'https://www.quantaproducts.com.py/'
	},
	{
		title: 'Proyecto 5',
		img: '/img/work5.jpg',
		link: 'https://www.alphaplay.tv/'
	},
	{
		title: 'Proyecto 6',
		img: '/img/work6.jpg',
		link: 'https://www.instagram.com/p/CppVdr0tcd7/'
	}
];

---

<Layout title="Portafolio - Andrea Aguayo">
            <!--===== HOME =====-->
            <section class="home" id="home">
                <div class="home__container bd-grid">
                    <h1 class="home__title"><span>HO</span><br>LA.</h1>

                    <div class="home__scroll">
                        <a href="#about" class="home__scroll-link"><i class='bx bx-up-arrow-alt' ></i>Desliza Abajo</a>
                    </div>

                    <img src="/img/perfil.png" alt="" class="home__img">
                </div>
            </section>

            <!--===== ABOUT =====-->
            <section class="about section" id="about">
                <h2 class="section-title">Sobre</h2>

                <div class="about__container bd-grid">
                    <div class="abouts__img">
                        <img src="/img/foto.jpg" alt="">
                    </div>

                    <div>
                        <h2 class="about__subtitle">Hola soy <br> Andrea Aguayo</h2>
                        <span class="about__profession">Diseñadora grafica</span>
                        <p class="about__text">Soy la encargada de representar gráficamente tus ideas de la forma más creativa en diseños digitales, logos, flyers, banners, publicidades o propagandas según tu finalidad.</p>

                    </div>
                </div>
            </section>

            <!--===== SKILLS =====-->
            <section class="skills section" id="skills">
                <h2 class="section-title">Conocimientos</h2>

                <div class="skills__container bd-grid">
                    <div class="skills__box">
                        <h3 class="skills__subtitle">Diseño grafico</h3>
						{
							skills.map((skill, index) => (
								<span class="skills__name">{skill}</span>
							))
						}
                        
                    </div>

                    <div class="skills__img">
                        <img src="/img/skill.jpg" alt="">
                    </div>
                </div>
            </section>

            <!--===== PORTFOLIO =====-->
            <section class="portfolio section" id="portfolio">
                <h2 class="section-title">Portafolio</h2>

                <div class="portfolio__container bd-grid">
          
                    {
                        portfolio.map(
                            (project, index) => (
                                <PortfolioCard title={project.title} image={project.img} link={project.link} />
                            )
                        )
                    }
                </div>
                <a class="section-vermas" href="PY.pdf" target="_blank">Ver más proyectos</a>
            </section>

</Layout>

