---

const { title, image, link } = Astro.props;

---
<div>

    <div class="portfolio__img">
        <img src={image} alt="">
        <a  href={link} class="portfolio__link">
            <p class="portfolio__link-name">Ver Detalles</p>
        </a>
    </div>
    {
       <a
        href={link}
       class="portfolio__title">{title}</a>
    }
</div>  

<style>
    .portfolio__title{
        margin-top: 30px;
        color: #000;
        font-weight: 400;
    }
    .portfolio__title:hover{
        color: var(--first-color);
    }
    .portfolio__img {
        margin-bottom: 20px;
    }
</style>